{
  "name": "waba-toolkit",
  "version": "0.2.0",
  "description": "Type-safe, zero-dependency WhatsApp Business API toolkit for webhooks, media downloads, and signature verification",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=20.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "whatsapp",
    "waba",
    "whatsapp-business-api",
    "whatsapp-cloud-api",
    "webhook",
    "meta",
    "cloud-api",
    "messaging",
    "typescript"
  ],
  "homepage": "https://github.com/teknicus/waba-toolkit",
  "bugs": {
    "url": "https://github.com/teknicus/waba-toolkit/issues"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.0.3",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.16"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/teknicus/waba-toolkit.git"
  }
}
